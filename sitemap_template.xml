et xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for post in posts %}
    <url>
	    <loc>{{ post.permalink | uriencode }}</loc>
		    {% if post.updated %}
			    <lastmod>{{ post.updated.toISOString() }}</lastmod>
				    {% elif post.date %}
					    <lastmod>{{ post.date.toISOString() }}</lastmod>
						    {% endif %}
							  </url>
							    {% endfor %}
								</urlset>
